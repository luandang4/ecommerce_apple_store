<div class="row">
  <div class="col-sm-12">
    <div class="white-box">
      <div class="table-responsive">
        <%= form_for @address, url: address_path(id: @address.id) do |f| %>
          <%= render 'share/error_messages', object:  f.object %>
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
          <%= f.label :phone %>
          <%= f.text_field :phone, class: "form-control" %>
          <%= f.label :address %>
          <%= f.text_field :address, class: "form-control" %>
          <%= f.button :submit, class: "btn btn-primary mt-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
