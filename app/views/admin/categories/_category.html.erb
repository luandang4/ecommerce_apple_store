<tr>
  <td><%= category.id %></td>
  <td>
    <%= link_to admin_categories_path(category.id) do %>
      <%= category.name %>
    <% end %>
  </td>
  <td>
    <div class="delete-category" data-category-id="<%= category.id %>">
      <%= image_tag "icons-delete-25"  %>
    </div>
  </td>
  <td>
    <div class="update-category" data-category-id="<%= category.id %>">
      <%= link_to edit_admin_category_path(category) do %>
        <%= image_tag "icons-pen-35" %>
      <% end %>
    </div>
  </td>
</tr>
