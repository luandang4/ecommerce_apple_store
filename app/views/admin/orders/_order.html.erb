<tr>
  <td><%= order.id %></td>
  <td><%= order.user.name %></td>
  <td><%= order.delivery_address.address %></td>
  <td><%= order.payment_method.capitalize %></td>
  <td><%= format_number_to_currency order.shipping_fee %> đ</td>
  <td><%= format_number_to_currency order.total_payment %> đ</td>
  <td>
    <%= select :status, "",options_for_select(Order.status.options), {prompt: order.status.capitalize}, class: "form-select", id: "status-select" %>
  </td>
</tr>
